<Window x:Class="GeoGuessrPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="GeoGuessr Player"
        MinHeight="400" MinWidth="600" ResizeMode="CanResizeWithGrip" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}">

    <Grid>
        <!-- Define the row structure for Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- WebView takes remaining space -->
            <RowDefinition Height="35" />
            <!-- Fixed height for taskbar -->
        </Grid.RowDefinitions>

        <!-- WebView for embedding the GeoGuessr game, takes all space except for the taskbar -->
        <wv2:WebView2 x:Name="WebView" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

        <!-- Taskbar (Docked at the bottom) with TitleBar Color -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrush}}" Height="35">
            <!-- Back Button -->
            <Button x:Name="BackButton" Content="Back" Width="100" Height="30" Margin="5" Click="BackButton_Click" IsEnabled="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <!-- Refresh Button -->
            <Button x:Name="RefreshButton" Content="Refresh" Width="100" Height="30" Margin="5" Click="RefreshButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
